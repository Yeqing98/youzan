.search-content
    width: 100%
    height: 64px
    border-bottom: 1px solid #b2b2b2
    background-color #fff
    display: flex
    .nav-link
        text-decoration: none
        .classify
            height: 48px
            width: 50px
            margin-top: 25px
            color: #333333
            font-size: 12px
            display: flex
            flex-direction: column
            align-items: center
            .classify-img
                width: 22px
                height: 16px
                margin-bottom: 4px
    .nav-linkSearch
        width: 100%
        text-decoration: none
        .search
            width: 100%
            height: 30px
            background-color: #f0f0f0
            color: #a6a6a6
            border-radius: 40px
            margin-top: 25px
            font-size: 12px
            display: flex
            align-items: center
            .search-img
                width: 15px
                height: 15px
                margin: 0 8px 0 8px
    .message
        height: 48px
        width: 50px
        margin-top: 25px
        color: #333333
        font-size: 12px
        display: flex
        flex-direction: column
        align-items: center
        .message-img
            width: 18px
            height: 18px
            margin-bottom: 2px