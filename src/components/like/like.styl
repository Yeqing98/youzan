.like
    width: 100%
    height: 100%
    .like-header
        width: 100%
        height 65px
        padding: 20px 64px 0 64px
        box-sizing: border-box;
        background-color #f9f9f9
        display: flex
        align-items: center
        border-bottom: 1px solid #b2b2b2
        .likeHeader-item
            flex: 1
            text-align: center
            color: #6d6d6d
            &.active
                color: #ff4545