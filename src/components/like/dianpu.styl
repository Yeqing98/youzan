.dianpu
    width: 100%
    height: 100%
    .dianpu-tab
        width: 100%
        height: 37px
        background-color #fff
        display: flex
        .dianpu-tab-item
            position relative
            flex: 1
            text-align: center
            text-decoration: none
            font-size: 12px
            color: #6d6d6d
            // line-height: 30px
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            &.active
                color: #ff4545
                &:before
                    content: " "
                    background-color: #ff4545
                    position: absolute
                    bottom: 0
                    margin: auto
                    width: 66px
                    height: 4px