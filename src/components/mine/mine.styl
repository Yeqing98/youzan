.mine
    width: 100%
    height: 93vh
    padding: 0 12px 0 12px
    box-sizing: border-box
    background-color #f2f3f5
    .mine-message
        width: 100%
        height: 62px
        .mine-img
            position absolute
            width: 22px
            height: 22px
            right: 23px
            top: 34px
    .login
        width: 100%
        height: 87px
        display: flex
        align-items: center
        .avatar
            width: 56px
            height: 56px
            margin-right: 17px
        .login-register
            font-size: 18px
            font-weight: bold
            color: #323323
    .mine-order
        width: 100%
        height: 123px
        border-radius: 10px
        background-color #fff
        .order-header
            width: 100%
            height: 43px
            padding: 0 15px 0 15px
            box-sizing: border-box
            display: flex
            justify-content: space-between
            align-items: center
            .myOrder
                font-size: 16px
                font-weight: bold
            .allOrder
                font-size: 13px
                color: #969799
                display: flex
                align-items: center
                .toRight
                    width: 12px
                    height: 12px
                    margin-left: 7px
        .order-body
            width: 100%
            height: 80px
            padding: 0 20px 0 20px
            box-sizing: border-box
            display: flex
            .order-item
                flex: 1
                font-size: 14px
                color: #969799
                display: flex
                flex-direction: column
                justify-content: center
                align-items: center
                .orderItem-img
                    width: 26px
                    height: 26px
                    margin-bottom: 12px
    .mine-wallet
        width: 100%
        height: 123px
        border-radius: 10px
        background-color #fff
        margin-top: 12px
        .wallet-header
            width: 100%
            height: 43px
            padding: 0 15px 0 15px
            box-sizing: border-box
            display: flex
            justify-content: space-between
            align-items: center
            .myWallet
                font-size: 16px
                font-weight: bold
            .allWallet
                font-size: 13px
                color: #969799
                display: flex
                align-items: center
                .toRight
                    width: 12px
                    height: 12px
                    margin-left: 7px
        .wallet-body
            width: 100%
            height: 80px
            padding: 0 20px 0 20px
            box-sizing: border-box
            display: flex
            .wallet-item
                flex: 1
                font-size: 14px
                color: #969799
                display: flex
                flex-direction: column
                justify-content: center
                align-items: center
                .wallet-num
                    font-size: 18px
                    font-weight: bold
                    color: #323323
                    margin-bottom: 10px
    .mine-tool
        width: 100%
        height: 186px
        border-radius: 10px
        background-color #fff
        margin-top: 12px
        .tool-header
            width: 100%
            height: 43px
            padding: 0 15px 0 15px
            font-size: 16px
            font-weight: bold
            line-height: 43px
        .tool-body
            width: 100%
            height: 78px
            padding: 0 20px 0 20px
            box-sizing: border-box
            display: flex
            border-bottom 1px solid #f5f6f8
            .tool-item
                flex: 1
                font-size: 14px
                color: #969799
                display: flex
                flex-direction: column
                justify-content: center
                align-items: center
                .tool-num
                    font-size: 18px
                    font-weight: bold
                    color: #323323
                    margin-bottom: 10px
        .tool-other
            width: 100%
            height: 65px
            display: flex
            .service
                flex: 1
                display: flex
                justify-content: center
                align-items: center
                .service-img
                    width: 33px
                    height: 33px
                    border-radius: 50%
                    margin-right: 16px
                .service-text
                    height: 33px
                    .youzan-service
                        font-size: 16px
                        color: #323323
                        font-weight: bold
                        line-height: 1
                    .problem
                        font-size: 14px
                        color: #969799
                        line-height: 1
            .opening
                flex: 1
                display: flex
                justify-content: center
                align-items: center
                .opening-img
                    width: 33px
                    height: 33px
                    border-radius: 50%
                    margin-right: 16px
                .opening-text
                    height: 33px
                    .want-opening
                        font-size: 16px
                        color: #323323
                        font-weight: bold
                        line-height: 1
                    .make-money
                        font-size: 14px
                        color: #969799
                        line-height: 1